<div class="container">
<div class="displaypage">
  <h2 class="cart_header"> Your Cart </h2>
  <hr>
  <%= render partial: "shared/order" %>


  <div class="row">
    <% if current_user %>

    <p><%= collection_select(:order, :id, current_user.addresses.all, :id, :street, options = {:prompt => "Select an Address"}) %></p>

    <%= link_to "Checkout", orders_path, method: "post", class: "btn btn-success" %>
    <% else %>
    <%= link_to "Login", login_path %> or <%= link_to "Create Account", new_user_path %> to Checkout
    <% end %>
  </div>
</div>
</div>
