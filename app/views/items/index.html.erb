<h1 class="indexheader">All Items</h1>

<div class="row">
<% @items.each do |item| %>
  <div class="col-md-4"><div class="card"><%= link_to image_tag(item.image, class: "img-thumbnail"), item_path(item) %>
  <div class="card-text"><%= item.title %>; <%= number_to_currency(item.price) %></div></div></div>
<% end %>
</div>
