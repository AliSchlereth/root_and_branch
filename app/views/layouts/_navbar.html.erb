<div class="navbar-default">
  <nav class="navbar navbar-default">
    <a class="navbar-brand" href="/">Root <span style="font-family: 'Bungee Outline', cursive;">&</span> Branch</a>
    <ul class="nav navbar-nav">
      <li class="nav-item">
        <a class="nav-link" href="/">Home</a>
      </li>
      <li class="nav-item dropdown">
        <a class="nav-link dropdown-toggle" href="#" id="supportedContentDropdown" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Categories</a>
        <div class="dropdown-menu" aria-labelledby="supportedContentDropdown">
          <% all_categories.each do |category| %>
            <%= link_to category.name, category_path(category), class: "dropdown-item" %>
          <% end %>
        </div>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="/items">All  Items</a>
      </li>
    </ul>
    <ul class="nav navbar-nav float-xs-right">
      <li class="nav-item">
        <%= link_to "Cart (#{@cart.total_items})", cart_path, class: "nav-link" %>
      </li>
      <li class="nav-item">
        <% if current_admin? %>
          <%= link_to "Account", admin_dashboard_path, class: "nav-link" %>
        <% elsif current_user %>
          <%= link_to "Account", dashboard_path, class: "nav-link" %>
        <% end %>
      </li>
      <li class="nav-item">
        <% if current_user %>
          <%= link_to "Logout #{current_user.name}", logout_path, class: "nav-link" %>
        <% else %>
          <%= link_to "Login", login_path, class: "nav-link" %>
        <% end %>
      </li>
    </ul>
  </nav>
</div>
