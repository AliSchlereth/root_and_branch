<div class="row">
<% @items.each do |item| %>
  <div class="col-md-4"><div class="card"><%= link_to image_tag(item.image, class: "img-thumbnail"), item_path(item) %>
  <div class="card-text"><p class="split"><%= item.title %> <span><%= number_to_currency(item.price) %></span></p></div></div></div>
<% end %>
</div>
